<body>
  <h2>ðŸ“… Kalender Cuti Bersama</h2>
  <div id="calendar"></div>

  <script>
  // âœ… Ganti URL ini dengan URL yang muncul di browser kamu (yang ada "script.googleusercontent.com/macros/echo?...")
  const sheetAPI = "https://script.google.com/macros/s/AKfycbwAIljawlyj2hspgR2LmOGubEqvkeWuorFtJSD5szTJXFyupE0-LagC4JcHe7RGdlH5/exec"; 

  fetch(sheetAPI)
    .then(res => res.json())
    .then(data => {
      console.log("Data dari Google Sheet:", data); // cek di console GitHub Pages

      // mapping data JSON ke event kalender
      const events = data.map(row => ({
        title: `${row.nama} (${row.jenis})`,
        start: row.start,
        end: row.end,
        description: row.keterangan || ''
      }));

      const calendarEl = document.getElementById('calendar');
      const calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        events: events,
        eventColor: '#3788d8',
        displayEventTime: false
      });
      calendar.render();
    })
    .catch(err => console.error("Gagal ambil data:", err));
</script>

</body>
</html>
