<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kalender Cuti Bersama</title>
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; background: #f9f9f9; }
    h2 { text-align: center; color: #333; }
    #calendar { max-width: 900px; margin: 20px auto; background: white; padding: 10px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
  </style>
</head>
<body>
  <h2>ðŸ“… Kalender Cuti Bersama</h2>
  <div id="calendar"></div>

  <script>
    const sheetAPI = "https://script.google.com/macros/s/AKfycbxLsmNPH9iBrAqXDbPln262cBePzWL_ehMvDVRPr1Tq95ryAVuFwEzfFodZTf4SV-iL/exec";

    fetch(sheetAPI)
      .then(res => res.json())
      .then(data => {
        const events = data.map(row => ({
          title: `${row.nama} (${row.jenis})`,
          start: row.start,
          end: row.end,
          description: row.keterangan
        }));

        const calendarEl = document.getElementById('calendar');
        const calendar = new FullCalendar.Calendar(calendarEl, {
          initialView: 'dayGridMonth',
          events: events
        });
        calendar.render();
      })
      .catch(err => console.error(err));
  </script>
</body>
</html>
